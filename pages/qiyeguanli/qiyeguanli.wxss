/* pages/qiyeguanli/qiyeguanli.wxss */
.remind{
  color: red;
  font-size: 27rpx;
  margin: 20rpx;
}
input{
  border: 1px solid #90a4ae;
  width: 500rpx;
  height: 50rpx;
  border-radius: 15rpx;
}
.form-item {
  display: flex;
  margin: 40rpx 0;
}
.form-item .title{
  width: 200rpx;
  text-align: center;
  font-size: 29rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.onload{
  display: block;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  font-size: 27rpx;
  line-height: 50rpx;
}

.submit{
  width: 350rpx;
  height: 80rpx;
  background-color: red;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
}

.shehuiId .title{
   padding: 0 40rpx;
   box-sizing: border-box;
   height: 80rpx;
}
.shehuiId{
  display: flex;
  align-items: center;
}
.table{
   width: 100%;
   height: 1000rpx;
   background-color: #fff;
   border-radius: 20rpx;
   padding: 20rpx;
   box-sizing: border-box;
}
.yirenzheng{
  background-color: #f7f8fa;
  width: 100%;
  height: 1100rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.tr{
  width: 100%;
  height: 80rpx;
  /* border: 1px solid black; */
  display: flex;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}
.td{
  width: 35%;
  height: 100%;
  /* border: 1px solid black; */
}
.td-last{
  width: 65%;
  height: 100%;
  display: flex;
  align-items: center;
  line-height: 50rpx;
  /* border: 1px solid black; */
  justify-content: center;
}
.table text{
  font-size: 30rpx;
  display: block;
  margin: 20rpx 0 ;
}
.table .tr:nth-child(8){
  height: 150rpx;
}
.table .tr:nth-child(9){
  height: 200rpx;
}
.table .tr:nth-child(9) image{
  width: 150rpx;
  height: 150rpx;
}
.table .tr:nth-of-type(odd){
 background-color: #f1f1f1;
}
.reason{
  /* border: 1px solid red; */
  width: 95%;
  margin: 10rpx;
  background-color: rgba(24, 7, 1, 0.1);
  border-radius: 15rpx;
  margin: 0 auto;
  color: rgb(253, 253, 253);
  padding: 15rpx 0;
  font-size: 27rpx;
  display: flex;
  align-items: center;
  color: rgb(100, 100, 91);
}
.reason text{
  font-weight: 700;
}
.icon-bg-warning{
  margin: 0 20rpx;
}