/* pages/about/about.wxss */
page{
  background-color: #fff;
}
.text{
  font-size: 28rpx;
  width: 95%;
  height: 95%;
  padding: 50rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-indent: 2rem;
  box-shadow: 0 5rpx 20rpx 0 #e4e1e1;
}
.text rich-text{
  line-height: 48rpx;
}

.text image{
  margin: 40rpx 0;
  box-shadow: 0 5rpx 20rpx 0 #e4e1e1;
}

.box{
  width: 80%;
  margin: 20rpx auto;
  height: 500rpx;
  box-shadow: 0 5rpx 20rpx 0 #e4e1e1;
  background-color: #fff;
}
.box image{
  width: 95%;
  height: 350rpx;
  margin: 15rpx ;
}
.box text{
  display: block;
  color: gary;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 700;
}